<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp"
  tools:context=".HabitLogActivity">

  <TextView
    android:id="@+id/titleHabitLogTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:gravity="center"
    android:text="Habit Logs"
    android:textSize="30sp"
    android:background="?attr/colorPrimary"
    android:textColor="?attr/colorOnPrimary"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/habitLogRecyclerView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:clipToPadding="false"
    android:paddingBottom="8dp"
    tools:listitem="@layout/item_habit_log"
    app:layout_constraintTop_toBottomOf="@+id/titleHabitLogTextView"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>