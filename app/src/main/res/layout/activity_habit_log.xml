<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp"
  tools:context=".HabitLogActivity">

  <Button
    android:id="@+id/saveNoteButton"
    android:layout_width="136dp"
    android:layout_height="71dp"
    android:layout_margin="16dp"
    android:layout_marginTop="16dp"
    android:text="Save Note"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/noteEditText" />


  <EditText
    android:id="@+id/noteEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|start"
    android:hint="Enter a note here"
    android:inputType="textMultiLine"
    android:maxLines="6"
    android:minLines="3"
    app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

  <TextView
    android:id="@+id/dateTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Dec 16, 2025"
    android:textAlignment="center"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/habitName" />
  <TextView
    android:id="@+id/habitName"
    android:layout_width="153dp"
    android:layout_height="44dp"
    android:layout_marginTop="12dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="Drink Water"
    android:textAlignment="center"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/titleHabitLogTextView" />

  <TextView
    android:id="@+id/titleHabitLogTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?attr/colorPrimary"
    android:gravity="center"
    android:text="Habit Log"
    android:textColor="?attr/colorOnPrimary"
    android:textSize="30sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>